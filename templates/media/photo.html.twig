{% extends 'backoffice.html.twig' %}

{% block titre %}
    {{ title }}
{% endblock %}
{% block title %}
    {{ parent() }} {{ title }}
{% endblock %}



{% block body %}


    <form action="{{ path('delete_media') }}" method="post" class="row">
        {% for media in medias %}
            <div  class="col-4 my-2">
                <div class="row">
                    <img class="col-12" src="{{ asset('upload/') }}{{ media.name }}" width="300" alt="">
                    <div  style="position: relative;top:-110px;right: -170px" class="form-check">
                        <input class="form-check-input" name="choice[]" multiple type="checkbox" value="{{ media.id }}" id="flexCheckDefault">
                    </div>
                </div>
            </div>
        {% endfor %}
        <button class="btn btn-primary" type="submit">Supprimer</button>
    </form>
{% endblock %}




